@page
@model FTdx101_WebApp.Pages.PortsModel
@{
    ViewData["Title"] = "Available COM Ports";
}

<h2>Available COM Ports</h2>

<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <ul class="navbar-nav flex-grow-1">
        <li class="nav-item">
            <a class="nav-link text-dark" asp-page="/Index">Home</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-page="/Diagnostics">Diagnostics</a>
        </li>
    </ul>
</nav>

<ul>
@foreach (var port in Model.AvailablePorts)
{
    <li>@port</li>
}
</ul>

@if (Model.Com6Present)
{
    <div style="color: green; font-weight: bold;">COM6 is available.</div>
}
else
{
    <div style="color: red; font-weight: bold;">COM6 is NOT available.</div>
}